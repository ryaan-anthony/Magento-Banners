<?xml version="1.0"?>
<config>
	<tabs>
        <cms translate="label">
            <label>CMS</label>
            <sort_order>250</sort_order>
        </cms>
    </tabs>
	<sections>
         <banner translate="label">
         	<label>Banner</label>
			<tab>cms</tab>
			<frontend_type>text</frontend_type>
			<sort_order>99999</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
            <groups>
                <slide translate="label comment">
                    <label>Slides</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
					<fields>
                        <speed translate="label">
                            <label>Slide Speed</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The speed of the transition effect in milliseconds.</comment>
                        </speed>
                        <manual_speed translate="label">
                            <label>Manual Speed</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The speed (in milliseconds) for transitions that are manually initiated.</comment>
                        </manual_speed>
                        <timeout translate="label">
                            <label>Timeout</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The time between slide transitions in milliseconds.</comment>
                        </timeout>
                        <fx translate="label">
                            <label>Timeout</label>
                            <frontend_type>select</frontend_type>
                            <source_model>banner/source_fx</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The type of slideshow transition to use.</comment>
                        </fx>
                    </fields>
                </slide>
            </groups>
        </banner>
    </sections>
</config>